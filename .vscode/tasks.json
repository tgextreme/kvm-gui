{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build KVM Manager",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--parallel"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Run KVM Manager",
			"type": "shell",
			"command": "./build/KVMManager",
			"args": [],
			"group": "test",
			"dependsOn": "Build KVM Manager",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Configure CMake",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"build",
				"-S",
				"."
			],
			"group": "build",
			"problemMatcher": []
		}
	]
}